
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 left">
    @Html.Partial("_TinTucAll")
</div>

<p class="title" ng-controller="showSearchController" ng-show="!(searchText.length > 0)"><i>Xin lỗi! Kết quả tìm kiếm không tồn tại</i></p>
<p class="col-lg-9 col-md-9 col-sm-9 col-xs-12 tieuDeSP" ng-controller="showSearchController" ng-show="products.length > 0">Có {{products.length}} sản phẩm</p>

<!--Sản phẩm-->
<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 goiYSP" style="margin-bottom:4em;" ng-controller="showSearchController">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 sanPham" style="margin-bottom:1em;" ng-repeat="(index, value) in products">
        <img ng-src="{{value.image}}" class="img-responsive" />
        <a class="tieuDe" href="/san-pham/{{value.alias}}-{{value.idProduct}}">{{value.title}}</a>
        <p class="gia"><span>Giá:</span> {{value.price | number:0}} đ</p>
        <a class="chiTiet" href="/san-pham/{{value.alias}}-{{value.idProduct}}">Chi tiết</a>
        <a class="datHang" href="#">Đặt hàng</a>
    </div>
</div>

<p class="col-lg-9 col-md-9 col-sm-9 col-xs-12 tieuDeSP" ng-controller="showSearchController" ng-show="posts.length > 0">Có {{products.length}} bài viết</p>
<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 right" ng-controller="showSearchController">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 tongHop">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 allBaiViet" ng-repeat="(index, value) in posts">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 khung">
                <img class="img-responsive" ng-src="{{value.image}}" />
                <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">{{value.title}}</a>
                <div class="tomTat" ng-bind-html="value.content | limitTo: 100"></div>
            </div>
        </div>
    </div>
</div>




