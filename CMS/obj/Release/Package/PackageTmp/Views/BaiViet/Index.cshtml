@model CMS.Models.Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 left">
    @Html.Partial("_MenuLeft")
    @Html.Partial("_TinTucAll")
</div>

<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 right" ng-controller="postController">
    <input type="hidden" value="@Model.idPost" id="idPost" />
    <p class="tieuDe">{{post.title}}</p>
    <!--Tỏi trắng-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 noiDung" ng-bind-html="post.content"></div>
</div>

<!--Gợi ý thêm sản phẩm-->
@Html.Partial("_SanPham");