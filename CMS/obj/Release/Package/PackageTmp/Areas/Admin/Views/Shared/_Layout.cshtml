<body class="menubar-hoverable header-fixed">
    <!-- HEADER-->
    <header id="header">
        <div class="headerbar">
            <!--Logo-->
            <div class="headerbar-left">
                <ul class="header-nav header-nav-options">
                    <li class="header-nav-brand">
                        <div class="brand-holder">
                            <a href="/">
                                <span class="text-lg text-bold text-primary">Linh đơn</span>
                            </a>
                        </div>
                    </li>
                    <li>
                        <a class="btn btn-icon-toggle menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <!--HeaderBar-->
            <div class="headerbar-right">
                <ul class="header-nav header-nav-options">
                    <!-- Search form -->
                    <li>
                        <form class="navbar-search" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" name="headerSearch" placeholder="Enter your keyword">
                            </div>
                            <button type="submit" class="btn btn-icon-toggle ink-reaction"><i class="fa fa-search"></i></button>
                        </form>
                    </li>
                </ul>
                <!--Profile-->
                <ul class="header-nav header-nav-profile">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle ink-reaction" data-toggle="dropdown">
                            <img src="~/Content/admin/img/Anonymous.png" />
                            <span class="profile-info">
                                <b>@WebSecurity.CurrentUserName</b><br />
                                <span>@Roles.GetRolesForUser(WebSecurity.CurrentUserName)[0]</span>
                            </span>
                        </a>
                        <ul class="dropdown-menu animation-dock">
                            <li><a href="@Url.Action("Logout", "Account", new { Area = "" })"><i class="fa fa-fw fa-power-off text-danger"></i> Logout</a></li>
                        </ul><!--end .dropdown-menu -->
                    </li><!--end .dropdown -->
                </ul>
            </div>
        </div>
    </header>

    <!-- BASE-->
    <div id="base" class="menubar-hoverable">
        <!-- OFFCANVAS LEFT -->
        <div class="offcanvas">
        </div>

        <!-- CONTENT-->
        <div id="content">
            <!-- SECTION -->
            <section>
                <!--Header Section-->
                <div class="section-header">
                    <ol class="breadcrumb">
                        <li class="active text-uppercase">@ViewBag.Title</li>
                    </ol>
                </div>

                <!--Body-->
                <div class="section-body">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- MENUBAR-->
